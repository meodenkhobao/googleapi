<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>From</th>
      <th>Subject</th>
    </tr>
  </thead>
  <tbody>
    <% @threads.each do |thread| %>
    <tr>
      <td><%= thread['Date'] %></td>
      <td><%= thread['From'] %></td>
      <td><%= thread['Subject'] %></td>
    </tr>
    <% end %>
  </tbody>
</table>