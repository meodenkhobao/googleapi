<% rows = (@friends.size / 2.0).ceil %>
<% rows.times do |i| %>
  <div class="row">
    <div class="col-md-6">
    <% friend = @friends[2 * i] %>
      <div class="row">
        <div class="col-md-2">
          <%= link_to friend.url do %>
            <%= image_tag friend.image.url.split('?').first + "?sz=80"%>
          <% end %>
        </div>
        <div class="col-md-10">
          <%= link_to friend.displayName, friend.url %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
    <% friend = @friends[2 * i + 1] %>
      <% if friend %>
      <div class="row">
        <div class="col-md-2">
          <%= link_to friend.url do %>
            <%= image_tag friend.image.url.split('?').first + "?sz=80" %>
          <% end %>
        </div>
        <div class="col-md-10">
          <%= link_to friend.displayName, friend.url %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <br/>
<% end %>